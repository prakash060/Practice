@model HomeIndexViewModel;

@{
    ViewBag.Title = @Model.Title;
}

<h3>@Model.Title</h3>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Description</td>
                <td>@employee.Department</td>
            </tr>
        }
    </tbody>
</table>